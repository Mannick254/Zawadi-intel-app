{
  "version": 2,
  "cleanUrls": true,
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server/index.js" },
    { "src": "/static/(.*)", "dest": "/public/static/$1" },
    { "src": "/images/(.*)", "dest": "/public/images/$1" },
    { "src": "/data/(.*)", "dest": "/public/data/$1" },
    { "src": "/js/(.*)", "dest": "/public/js/$1" },
    { "src": "/css/(.*)", "dest": "/public/css/$1" },
    { "src": "/favicon.ico", "dest": "/public/favicon.ico" },
    { "src": "/manifest.json", "dest": "/public/manifest.json" },
    { "src": "/service-worker.js", "dest": "/public/service-worker.js" },
    { "src": "/robots.txt", "dest": "/public/robots.txt" },
    { "src": "/sw.js", "dest": "/public/sw.js" },
    { "src": "/sitemap.xml", "dest": "/public/sitemap.xml" },
    { "src": "/about", "dest": "/public/about.html" },
    { "src": "/contact", "dest": "/public/contact.html" },
    { "src": "/pricing", "dest": "/public/pricing.html" },
    { "src": "/admin", "dest": "/public/admin.html" },
    { "src": "/articles/(.*)", "dest": "/public/articles/$1" },
    { "src": "/(.*)", "dest": "/public/index.html" }
  ]
}