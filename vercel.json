{
  "version": 2,
  "builds": [
    { "src": "public/api/**/*.js", "use": "@vercel/node" },
    { "src": "public/**/*.html", "use": "@vercel/static" },
    { "src": "public/js/**/*.js", "use": "@vercel/static" },
    { "src": "public/css/**/*.css", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/public/api/$1" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ],
  "cleanUrls": true,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
