{
  "version": 2,
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node",
      "config": { "includeFiles": "../public/**" }
    }
  ],
  "routes": [
    {
      "src": "/home",
      "dest": "/index.html"
    },
    {
      "src": "/",
      "status": 301,
      "dest": "/home"
    },
    {
      "src": "/public/js/push-notifications.js",
      "dest": "/public/js/push-notifications.js"
    },
    {
      "src": "/(.*)",
      "dest": "server/index.js"
    }
  ],
  "cleanUrls": true
}
