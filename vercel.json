{
  "version": 2,
  "builds": [
    { "src": "public/api/**/*.js", "use": "@vercel/node" },
    { "src": "public/**/*.html", "use": "@vercel/static" },
    { "src": "public/css/**/*.css", "use": "@vercel/static" },
    { "src": "public/js/**/*.js", "use": "@vercel/static" },
    { "src": "public/data/**/*.json", "use": "@vercel/static" },
    { "src": "public/icons/**/*.png", "use": "@vercel/static" },
    { "src": "public/images/**/*", "use": "@vercel/static" },
    { "src": "public/manifest.json", "use": "@vercel/static" },
    { "src": "public/robots.txt", "use": "@vercel/static" },
    { "src": "public/service-worker.js", "use": "@vercel/static" },
    { "src": "public/sitemap-index.xml", "use": "@vercel/static" },
    { "src": "public/sitemap.xsl", "use": "@vercel/static" },
    { "src": "public/articles-sitemap.xml", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/public/api/$1"
    },
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1.html"
    }
  ]
}
